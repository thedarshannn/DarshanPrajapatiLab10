<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FBE6E4"
    android:layout_height="match_parent"
    tools:context=".N013584247Fragment">

    <TextView
        android:id="@+id/darNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="33dp"
        android:text="@string/name_id"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RecyclerView to display list of video items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/darRecyclerView"
        android:layout_width="410dp"
        android:layout_height="297dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="76dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- WebView for playing YouTube video -->
    <WebView
        android:id="@+id/darWebView"
        android:layout_width="415dp"
        android:layout_height="282dp"
        android:layout_marginTop="436dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>